<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1FAF4"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/nav_return"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:layout_gravity="start"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="-50dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/nav_return"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/qa_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:text="Question: "
            android:textColor="#2F855A"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#0DBB0D"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/qa_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question description"
            android:textSize="16sp"
            android:textColor="#2D3748"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/qa_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline: --/--/----"
            android:textColor="#718096"
            android:textSize="14sp"
            android:layout_marginBottom="30dp" />

        <ImageView
            android:id="@+id/qa_imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:contentDescription="Attached Image"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/qa_fileLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:text="Открыть файл" />

        <EditText
            android:id="@+id/qa_fullAnswer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/edit_text_border"
            android:padding="10dp"
            android:gravity="start"
            android:text="Answer:\n\nExplanation:"
            android:textSize="15sp"
            android:textColor="#1A202C"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#48BB78"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="30dp" />
    </LinearLayout>
</ScrollView>
