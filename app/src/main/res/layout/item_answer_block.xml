<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="12dp"
    android:layout_marginBottom="12dp">

    <!-- ... Ð¾ÑÑ‚Ð°Ð»ÑŒÐ½Ð¾Ð¹ Ñ‚Ð²Ð¾Ð¹ ÐºÐ¾Ð´ Ð²Ñ‹ÑˆÐµ ... -->

    <!-- ðŸ”» Ð‘Ð»Ð¾Ðº Ð¾Ñ‚Ð²ÐµÑ‚Ð¾Ð² -->


    <!-- ÐžÑ‚Ð²ÐµÑ‚ 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/answerUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User123"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/answerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the answer explanation..."
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/thankButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:id="@+id/heartIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_heart_outline_red"
                android:layout_marginEnd="6dp"
                app:tint="#D32F2F"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:id="@+id/thankCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THANKS 37"
                android:textColor="#D32F2F"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

