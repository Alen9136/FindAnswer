<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:padding="16dp"
    android:layout_marginTop="35dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:elevation="2dp">

        <!-- Имя пользователя -->
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Предмет и класс -->
        <TextView
            android:id="@+id/subjectTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Algebra • 10 grade"
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_marginBottom="4dp" />

        <!-- Заголовок вопроса -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title of the question"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <!-- Описание вопроса -->
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description..."
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Кнопка для ответа -->
        <Button
            android:id="@+id/answerButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ ANSWER THE QUESTION + 5 C"
            android:backgroundTint="#A5D6A7"
            android:textSize="14sp"
            android:padding="10dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="start"
            android:textColor="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginBottom="-16dp" />

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <!-- Поле "Спросить автора" -->
        <EditText
            android:id="@+id/askAuthorEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ask the author about this question..."
            android:padding="8dp"
            android:background="@drawable/edittext_background"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:layout_marginBottom="24dp" />

        <!-- Заголовок блока ответов -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answers"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Контейнер для динамических ответов -->
        <LinearLayout
            android:id="@+id/answersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>
