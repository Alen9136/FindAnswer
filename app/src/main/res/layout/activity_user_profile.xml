<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="33dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Аватарка -->
        <ImageView
            android:id="@+id/profileAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/nav_profile"
            android:background="@drawable/avatar_circle_bg"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:layout_marginBottom="12dp" />

        <!-- Ник -->
        <TextView
            android:id="@+id/profileUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="20sp"
            android:textColor="#2E7D32"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="5dp" />

        <!-- Количество монет -->
        <TextView
            android:id="@+id/coinsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coins: 0"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <!-- Статистика -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/answersCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#388E3C" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Answers"
                    android:textSize="13sp"
                    android:textColor="#666" />
            </LinearLayout>

            <!-- Вертикальный разделитель -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#DDDDDD" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/likesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#388E3C" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Likes"
                    android:textSize="13sp"
                    android:textColor="#666" />
            </LinearLayout>
        </LinearLayout>

        <!-- Кнопка для просмотра вопросов пользователя -->
        <Button
            android:id="@+id/viewUserQuestionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Questions"
            android:textSize="14sp"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#A5D6A7"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
